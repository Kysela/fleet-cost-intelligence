# =====================================================
# Fleet Intelligence Backend - Environment Configuration
# =====================================================
# Copy this file to .env and fill in your values.
# Never commit .env to version control.
# =====================================================

# Server Configuration
PORT=3000
NODE_ENV=development

# Demo Mode (enables mock GPS data without requiring real API)
# Set to 'true' for showcase/demo deployments without real GPS API access
DEMO_MODE=false

# GPS API Configuration
# Note: In demo mode, these values are not required
GPS_API_BASE_URL=https://api.example-gps-provider.com
GPS_API_KEY=your-api-key-here
GPS_API_TIMEOUT=10000

# Cache TTL (in seconds)
CACHE_TTL_VEHICLES=60
CACHE_TTL_POSITIONS=30

# AI/LLM Configuration (OpenAI-compatible API)
AI_API_KEY=your-openai-api-key-here
AI_API_BASE_URL=https://api.openai.com/v1
AI_MODEL=gpt-4o-mini
AI_TEMPERATURE=0.3
AI_MAX_TOKENS=2000
AI_TIMEOUT=30000

# Logging
LOG_LEVEL=info
